@model Contactus


<<div class="col-lg-6">
    <form asp-action="SaveContact" method="post">
        <div class="row">
            <div class="col-md-6 form-group">
                <input type="text" asp-for="Name" required class="form-control" placeholder="Your Name" >
            </div>
            <div class="col-md-6 form-group mt-3 mt-md-0">
                <input type="email" class="form-control" required asp-for="Email" placeholder="Your Email">
            </div>
        </div>
        <div class="form-group mt-3">
            <input type="text" class="form-control" required asp-for="Subject" placeholder="Subject">
        </div>
        <div class="form-group mt-3">
            <textarea class="form-control" required asp-for="Message" rows="7" placeholder="Message"></textarea>
        </div>

        <div class="text-center"><button class="btn btn-success" type="submit">Send Message</button></div>
    </form>
</div>